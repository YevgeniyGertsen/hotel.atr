                                    <a href="#" data-toggle="modal" data-target="#bookingRoomModal">Желаете забронировать?</a>
                                </p>
                            }
                            else
                            {
                                <p style = "color:red">@availabilityRoom</p>
                            }

                            
                            <button type="submit" class="search default-btn">Check Availability</button>

                            
                        </div>
